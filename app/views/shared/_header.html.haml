.main-header
  .main-header__inner
    .clearfix
      %h1.l-left
        = link_to root_path do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2777205881"
      %nav.right-box--xs
        - unless user_signed_in?
          %ul.header-nav
            %li
              = link_to "ログイン", user_session_path, class: "main-header__btn"
            %li
              = link_to "新規会員", new_user_registration_path, class: "main-header__signup"
        - else
          = link_to user_path(current_user.id), class: "main-header__mypage" do
            .right-box-avatar
              = image_tag @user&.image ? @user.image : ""
      %form.search-box
        %input.search-form{type: "search", name: "keyword", placeholder: "キーワードから探す"}
        / = form_for [] do |f|
        /   = f.text_field :product, class: "search-form", placeholder: "何をお探しですか?"
        = fa_icon "search"
    .main-header__nav-box.clearfix
      %nav.left-box
        %ul.search-box
          %li.list-nav
            = link_to "カテゴリから探す", "#", class: "category"
            %ul.category
              %li.list
                = link_to "レディース"
              %li.list
                = link_to "メンズ"
              %li.list
                = link_to "ベビー・キッズ"
              %li.list
                = link_to "インテリア・住まい・小物"
              %li.list
                = link_to "本・音楽・ゲーム"
              %li.list
                = link_to "おもちゃ・ホビー・グッズ"
              %li.list
                = link_to "コスメ・香水・美容"
              %li.list
                = link_to "家電・スマホ・カメラ"
              %li.list
                = link_to "スポーツ・レジャー"
              %li.list
                = link_to "ハンドメイド"
              %li.list
                = link_to "チケット"
              %li.list
                = link_to "自転車・オートバイ"
              %li.list
                = link_to "その他"
              %li.list
                = link_to "カテゴリー一覧"

          %li.list-nav
            = link_to "ブランドから探す", "#", class: "brand"
            %ul.brand
              %li.list
                = link_to "シャネル"
              %li.list
                = link_to "ナイキ"
              %li.list
                = link_to "ルイヴィトン"
              %li.list
                = link_to "シュプリーム"
              %li.list
                = link_to "アディダス"
              %li.list
                = link_to "ブランド一覧"

      %nav.right-box
        %ul

          - if user_signed_in?
            %li
              = link_to user_path(current_user.id), class: "main-header__mypage" do
                .right-box-avatar
                  = image_tag @user&.image ? @user.image : ""
                .right-box-mypage
                  マイページ
            %li
              = link_to "#", class: "main-header__nav" do
                %i.far.fa-bell
                .right-box-mypage
                  お知らせ
            %li
              = link_to "#", class: "main-header__nav" do
                %i.fas.fa-check
                .right-box-mypage
                  やることリスト

          %li
            = link_to "ログイン", user_session_path, class: "main-header__btn" unless user_signed_in?
          %li
            = link_to "新規会員登録", new_user_registration_path, class: "main-header__signup" unless user_signed_in?
